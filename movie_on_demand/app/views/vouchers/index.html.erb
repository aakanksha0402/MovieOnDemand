<p id="notice"><%= notice %></p>

<h1>Listing Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Theater</th>
      <th>Theater screen</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Is deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.theater %></td>
        <td><%= voucher.theater_screen %></td>
        <td><%= voucher.name %></td>
        <td><%= voucher.description %></td>
        <td><%= voucher.price %></td>
        <td><%= voucher.is_deleted %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

