<div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="padding: 5px">
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "E-Mail Id" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group ">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
    <div class="form-group">
      <%= f.submit "Log in", class: 'btn btn-block btn-lg btn-primary', 'data-toggle': "modal", 'data-target': "#edit_details" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
<hr>
<div class="pull-right">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%=link_to "Forgot your Password",'/users/password/new',style: 'padding-right:10px',class: 'btn-lg'%>
<% end -%>
</div>
</div>
</div>
