<p id="notice"><%= notice %></p>

<h1>Listing Theater Screens</h1>

<table>
  <thead>
    <tr>
      <th>Theater</th>
      <th>Screen no</th>
      <th>Is deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theater_screens.each do |theater_screen| %>
      <tr>
        <td><%= theater_screen.theater %></td>
        <td><%= theater_screen.screen_no %></td>
        <td><%= theater_screen.is_deleted %></td>
        <td><%= link_to 'Show', theater_screen %></td>
        <td><%= link_to 'Edit', edit_theater_screen_path(theater_screen) %></td>
        <td><%= link_to 'Destroy', theater_screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

